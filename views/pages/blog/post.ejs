<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8"><meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= post.title %> • Inkwell</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <div class="container py-5" style="max-width: 900px;">
    <a href="/blog" class="text-decoration-none small">← Back</a>
    <h2 class="fw-bold mt-2"><%= post.title %></h2>
    <p class="text-muted">by <%= post.author.username %></p>
    <% if (post.coverUrl) { %>
      <img class="img-fluid rounded mb-4" src="<%= post.coverUrl %>" alt="">
    <% } %>
    <div class="bg-white p-4 rounded shadow-sm mb-4">
      <%= post.body %>
    </div>

    <form method="POST" action="/posts/<%= post._id %>/like" class="mb-4">
      <button class="btn btn-dark btn-sm">❤️ Like (<%= post.likes.length %>)</button>
    </form>

    <h5>Comments</h5>
    <form method="POST" action="/posts/<%= post._id %>/comments" class="mb-3">
      <textarea class="form-control mb-2" name="body" required rows="3" placeholder="Write a comment"></textarea>
      <button class="btn btn-outline-dark btn-sm">Comment</button>
    </form>

    <ul class="list-group">
      <% post.comments.slice().reverse().forEach(c => { %>
        <li class="list-group-item">
          <b><%= c.author?.username || 'User' %>:</b> <%= c.body %>
          <div class="text-muted small"><%= new Date(c.createdAt).toLocaleString() %></div>
        </li>
      <% }) %>
    </ul>
  </div>
</body>
</html>
