<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Inkwell â€¢ Reader</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/dist/css/blog.css">
</head>

<body>
  <div class="container-fluid p-4">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <img src="assets/images/inkwell.png" class="logo" alt="">
        <div class="ms-3 fs-5"><a href="/blog" class="text-decoration-none fw-semibold text-black">Reader</a> |
          <a href="/write" class="text-decoration-none text-secondary">Writer</a>
        </div>
      </div>
      <div class="d-flex align-items-center gap-3">
        <span class="text-muted small">Your favourite authorâ€™s new work is out nowâ€¦</span>
        <button class="btn btn-light rounded-circle">ðŸ””</button>
        <img src="https://i.pravatar.cc/40" class="rounded-circle" alt="profile">
      </div>
    </div>

    <div class="row">
      <!-- Left Column -->
      <div class="col-lg-9">

        <!-- Tabs -->
        <div class="d-flex justify-content-between gap-2 mb-4">
          <a href="/post" class="text-decoration-none text-black tab-box flex-fill text-center">Latest</a>
          <a href="/post" class="text-decoration-none text-black tab-box flex-fill text-center">Following</a>
          <a href="/post" class="text-decoration-none text-black tab-box flex-fill text-center">For You</a>
          <a href="/post" class="text-decoration-none text-black tab-box flex-fill text-center">Design</a>
        </div>



        <!-- Featured Cards -->
        <div class="row g-3 mb-3">
          <% const features=posts.slice(0,2); features.forEach(p=> { %>
            <div class="col-md-6">
              <a href="/posts/<%= p._id %>" class="text-decoration-none">
                <div class="card-clean">
                  <div class="thumb">
                    <img src="<%= p.coverUrl %>" alt="">
                    <div class="overlay">
                      <h6 class="fw-bold"><%= p.title %></h6>
                      <small><%= p.author?.username %></small>
                    </div>
                  </div>
                </div>
              </a>
            </div>
          <% }) %>
        </div>

        <!-- Small Cards -->
        <div class="row g-3">
          <% const rest=posts.slice(2,6); rest.forEach(p=> { %>
            <div class="col-md-3">
              <a href="/posts/<%= p._id %>" class="text-decoration-none">
                <div class="card-clean">
                  <div class="thumb">
                    <img src="<%= p.coverUrl %>" alt="">
                  </div>
                  <div class="p-2">
                    <h6 class="small fw-bold"><%= p.title %></h6>
                    <small class="text-muted"><%= p.author?.username %></small>
                  </div>
                </div>
              </a>
            </div>
          <% }) %>
        </div>

      </div>

      <!-- Right Sidebar -->
      <div class="col-lg-3">
        <input type="text" class="form-control mb-3" placeholder="Search">
        <div class="card p-4 mb-3 shadow-sm border-0 text-center discussions">
          <div>ðŸ‘¥</div>
          <p class="m-0">Join new discussions</p>
        </div>
        <div class="card p-4 shadow-sm border-0 text-center drag-box">
          <div class="border border-dashed p-5 rounded-3 text-muted">
            Drag and drop to add content +
          </div>
        </div>
      </div>
    </div>
  </div>
</body>

</html>
