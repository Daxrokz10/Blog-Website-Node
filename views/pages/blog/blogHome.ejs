<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Inkwell â€¢ Reader</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/dist/css/blog.css">
</head>

<body>
  <div class="container-fluid pb-4 ps-4 pe-4 mt-0">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <img src="assets/images/inkwell.png" class="logo" alt="">
        <div class="ms-3 fs-5"><a href="/blog" class="text-decoration-none fw-semibold text-black">Reader</a> |
          <a href="/write" class="text-decoration-none text-secondary">Writer</a>
        </div>
      </div>
      <div class="d-flex align-items-center gap-3">
        <span class="text-muted small">Your favourite authorâ€™s new work is out nowâ€¦</span>
        <button class="btn btn-light rounded-circle">ðŸ””</button>
        <a href="/profile"><img src="<%= user.profilePicture && user.profilePicture.trim() !== '' 
          ? user.profilePicture 
          : 'https://i.pravatar.cc/150?u=' + user.username %>"  alt="profile" class="profile-img me-4"></a>
        <form action="/logout" method="GET" class="m-0">
          <button type="submit" class="btn btn-outline-dark rounded-pill px-3 py-1 fw-semibold shadow-sm logout-btn">
            âŽ‹ Logout
          </button>
        </form>
      </div>
    </div>

    <div class="row">
      <!-- Left Column -->
      <div class="col-lg-9">

        <div class="row mb-2">
          <div class="col-3">
            <a href="/post" class="text-decoration-none text-black tab-box bg-active">Latest</a>
          </div>
          <div class="col-3">
            <a href="/post" class="text-decoration-none text-black tab-box">Following</a>
          </div>
          <div class="col-3">
            <a href="/post" class="text-decoration-none text-black tab-box">For You</a>
          </div>
          <div class="col-3">
            <a href="/post" class="text-decoration-none text-black tab-box">Design</a>
          </div>
        </div>

        <!-- Featured Cards -->
        <div class="row g-3 mb-3">
          <% const features=posts.slice(0,2); features.forEach(p=> { %>
            <div class="col-md-6">
              <a href="/posts/<%= p._id %>" class="text-decoration-none">
                <div class="card-clean">
                  <div class="thumb">
                    <img src="<%= p.coverUrl %>" alt="">
                    <div class="overlay d-flex align-items-center">
                      <p class="fs-1 mt-2">|</p>
                      <div class="heading ms-2">
                        <h6>
                          <%= p.title %>
                        </h6>
                        <small>
                          <%= p.author?.username %>
                        </small>
                      </div>
                    </div>
                  </div>
                </div>
              </a>
            </div>
            <% }) %>
        </div>

        <!-- Small Cards -->
        <div class="row g-3">
          <% const smallCards=posts.slice(2, 8); smallCards.forEach(p=> { %>
            <div class="col-md-3 col-sm-6">
              <a href="/posts/<%= p._id %>" class="text-decoration-none">
                <div class="card-clean">
                  <div class="thumb small">
                    <img src="<%= p.coverUrl %>" alt="">
                    <div class="overlay d-flex align-items-center">
                      <p class="fs-1 mt-2">|</p>
                      <div class="heading ms-2">
                        <h6>
                          <%= p.title %>
                        </h6>
                        <small>
                          <%= p.author?.username %>
                        </small>
                      </div>
                    </div>
                  </div>
                </div>
              </a>
            </div>
            <% }) %>
        </div>


      </div>

      <!-- Right Sidebar -->
      <div class="col-lg-3">
        <input type="text" class="form-control mb-3" placeholder="Search">
        <div class="card p-4 mb-3 shadow-sm border-0 text-center discussions">
          <div>ðŸ‘¥</div>
          <p class="m-0">Join new discussions</p>
        </div>
        <div class="card p-4 shadow-sm border-0 text-center drag-box">
          <div class="border border-dashed p-5 rounded-3 text-muted">
            Drag and drop to add content +
          </div>
        </div>
      </div>
    </div>
  </div>
</body>

</html>