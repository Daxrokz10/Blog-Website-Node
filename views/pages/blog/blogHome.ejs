<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8"><meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Inkwell • Reader</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/dist/css/blog.css">
  <style>
    .card-clean{border:0;background:#fff;box-shadow:0 4px 10px rgba(0,0,0,.06);border-radius:14px;overflow:hidden}
    .thumb{position:relative}
    .thumb img{width:100%;display:block}
    .overlay{
      position:absolute;inset:auto 0 0 0;padding:14px 16px;
      background:linear-gradient(180deg, rgba(0,0,0,0) 0%, rgba(0,0,0,.75) 100%);
      color:#fff
    }
    .overlay h6{margin:0 0 4px;font-weight:700}
    .overlay small{opacity:.85}
  </style>
</head>
<body>
  <div class="container-fluid p-5">

    <div class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <h2 class="fw-bold m-0">Inkwell</h2>
        <div><a href="/blog" class="text-decoration-none">Reader</a> |
             <a href="/write" class="text-decoration-none text-secondary">Writer</a></div>
      </div>
      <div>
        <a class="btn btn-dark" href="/posts/new">✍️ Write</a>
      </div>
    </div>

    <!-- Tabs -->
    <div class="row g-2 mb-3">
      <div class="col-3"><div class="tab-box">Latest</div></div>
      <div class="col-3"><div class="tab-box">Following</div></div>
      <div class="col-3"><div class="tab-box">For you</div></div>
      <div class="col-3"><div class="tab-box">Design</div></div>
    </div>

    <% const features = posts.slice(0,2); const rest = posts.slice(2,6); %>

    <!-- Two feature cards -->
    <div class="row g-3">
      <% features.forEach(p => { %>
        <div class="col-md-6">
          <a href="/posts/<%= p._id %>" class="text-decoration-none">
            <div class="card-clean">
              <div class="thumb">
                <img src="<%= p.coverUrl || 'https://picsum.photos/800/500?blur=4' %>" alt="">
                <div class="overlay">
                  <h6><%= p.title %></h6>
                  <small><%= p.author?.username %></small>
                </div>
              </div>
            </div>
          </a>
        </div>
      <% }) %>
    </div>

    <!-- Four smaller cards -->
    <div class="row g-3 mt-1">
      <% rest.forEach(p => { %>
        <div class="col-md-3">
          <a href="/posts/<%= p._id %>" class="text-decoration-none">
            <div class="card-clean">
              <div class="thumb">
                <img src="<%= p.coverUrl || 'https://picsum.photos/600/400?grayscale' %>" alt="">
                <div class="overlay">
                  <h6 class="small"><%= p.title %></h6>
                  <small><%= p.author?.username %></small>
                </div>
              </div>
            </div>
          </a>
        </div>
      <% }) %>
    </div>

  </div>
</body>
</html>
