<!doctype html>
<html lang="en">
<head>
  <title>Edit Profile</title>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-dark text-light">

  <div class="container py-5">
    <h2 class="mb-4">Edit Profile</h2>

    <form action="" method="POST" enctype="multipart/form-data" class="row g-3">

      <!-- Profile Picture -->
      <div class="col-12">
        <label class="form-label">Profile Picture</label>
        <input type="file" name="profilePicture" class="form-control bg-dark text-light border-secondary" accept="image/*" />
      </div>

      <!-- Role -->
      <div class="col-md-6">
        <label class="form-label">Role</label>
        <input type="text" name="role" class="form-control bg-dark text-light border-secondary" value="<%= user.role %>">
      </div>

      <!-- Experience -->
      <div class="col-md-6">
        <label class="form-label">Experience Level</label>
        <select name="experienceLevel" class="form-select bg-dark text-light border-secondary">
          <option <%= user.experienceLevel==="Beginner"?"selected":"" %>>Beginner</option>
          <option <%= user.experienceLevel==="Intermediate"?"selected":"" %>>Intermediate</option>
          <option <%= user.experienceLevel==="Advanced"?"selected":"" %>>Advanced</option>
        </select>
      </div>

      <!-- Favorite Artists -->
      <div class="col-md-6">
        <label class="form-label">Favorite Artists (comma separated)</label>
        <input type="text" name="favoriteArtists" class="form-control bg-dark text-light border-secondary"
          value="<%= user.favoriteArtists.join(', ') %>">
      </div>

      <!-- Software -->
      <div class="col-md-6">
        <label class="form-label">Software</label>
        <input type="text" name="software" class="form-control bg-dark text-light border-secondary" value="<%= user.software %>">
      </div>

      <!-- Favorite Genre -->
      <div class="col-md-6">
        <label class="form-label">Favorite Genre</label>
        <input type="text" name="favoriteGenre" class="form-control bg-dark text-light border-secondary" value="<%= user.favoriteGenre %>">
      </div>

      <!-- Preferred Mood -->
      <div class="col-md-6">
        <label class="form-label">Preferred Mood</label>
        <input type="text" name="preferredMood" class="form-control bg-dark text-light border-secondary" value="<%= user.preferredMood %>">
      </div>

      <!-- City -->
      <div class="col-md-6">
        <label class="form-label">City</label>
        <input type="text" name="city" class="form-control bg-dark text-light border-secondary" value="<%= user.city %>">
      </div>

      <!-- Availability -->
      <div class="col-md-6">
        <label class="form-label">Available for Collaboration</label>
        <select name="availability" class="form-select bg-dark text-light border-secondary">
          <option value="true" <%= user.availability ? "selected" : "" %>>Yes</option>
          <option value="false" <%= !user.availability ? "selected" : "" %>>No</option>
        </select>
      </div>

      <!-- Badges -->
      <div class="col-md-6">
        <label class="form-label">Badges (comma separated)</label>
        <input type="text" name="badges" class="form-control bg-dark text-light border-secondary"
          value="<%= user.badges.join(', ') %>">
      </div>

      <!-- Tags -->
      <div class="col-md-6">
        <label class="form-label">Tags (comma separated)</label>
        <input type="text" name="tags" class="form-control bg-dark text-light border-secondary"
          value="<%= user.tags.join(', ') %>">
      </div>

      <!-- Bio -->
      <div class="col-12">
        <label class="form-label">Bio</label>
        <textarea name="bio" class="form-control bg-dark text-light border-secondary" rows="3"><%= user.bio %></textarea>
      </div>

      <!-- Submit -->
      <div class="col-12">
        <button type="submit" class="btn btn-success">Save Changes</button>
      </div>
    </form>
  </div>

</body>
</html>
