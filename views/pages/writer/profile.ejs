<!doctype html>
<html lang="en">

<head>
  <title>
    <%= user.username %>‚Äôs Profile
  </title>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

  <!-- Bootstrap CSS v5.3.2 -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/dist/css/profile.css">
</head>

<body>
  <main class="container py-4">

    <!-- Profile -->
    <div class="profile-card d-flex align-items-center">
      <img src="<%= user.profilePicture && user.profilePicture.trim() !== '' 
          ? user.profilePicture 
          : 'https://i.pravatar.cc/150?u=' + user.username %>" alt="profile" class="profile-img me-4">
      <div>
        <h3 class="mb-1">
          <%= user.username %>
        </h3>
        <span class="premium">Premium User</span>
        <p class="mb-0 small">Member since Nov 22, 2022</p>
      </div>
      <div class="ms-auto d-flex flex-column">
        <a href="/editBio" class="btn my-1 btn-sm btn-success">
          ‚úèÔ∏è Edit Your Profile
        </a>
        <a href="/sureDeleteUser" class="btn my-1 btn-sm btn-danger">
          Delete Your Profile
        </a>
        <a href="/updatePassword" class="btn my-1 btn-sm btn-warning">Update pass</a>
      </div>
    </div>

    <!-- Bio & Details -->
    <div class="profile-card position-relative text-light p-4 rounded-3 shadow-lg">
      <% if( user.favoriteArtists=="" && user.software=="" && user.favoriteGenre=="" && user.preferredMood=="" &&
        user.city=="" && user.badges=="" && user.tags=="" && user.bio=="" ){ %>

        <!-- Blurred Empty State -->
        <div class="blur-content text-center py-5">
          <i class="bi bi-person-lines-fill fs-1 text-secondary d-block mb-3"></i>
          <p class="text-muted">Your bio looks empty üëÄ</p>
        </div>

        <!-- Overlay (not blurred) -->
        <div class="overlay-text text-center mt-3">
          <a href="/editBio" class="btn btn-success btn-sm px-3 rounded-pill shadow-sm">
            ‚úèÔ∏è Complete your bio
          </a>
        </div>

        <% } else { %>
          <div class="row g-4">
            <!-- Left Column -->
            <div class="col-md-6">
              <p><i class="bi bi-person-badge"></i> <strong>My Role:</strong>
                <%= user.role %>
              </p>
              <p><i class="bi bi-music-note-list"></i> <strong>Fav Artists:</strong>
                <%= user.favoriteArtists %>
              </p>
              <p><i class="bi bi-laptop"></i> <strong>Software I Use:</strong>
                <%= user.software %>
              </p>
              <p><i class="bi bi-geo-alt"></i> <strong>My City:</strong>
                <%= user.city %>
              </p>
            </div>

            <!-- Right Column -->
            <div class="col-md-6">
              <p><i class="bi bi-bar-chart"></i> <strong>Experience:</strong>
                <%= user.experienceLevel %>
              </p>
              <p><i class="bi bi-vinyl"></i> <strong>Fav Genre:</strong>
                <%= user.favoriteGenre %>
              </p>
              <p><i class="bi bi-emoji-smile"></i> <strong>Mood:</strong>
                <%= user.preferredMood %>
              </p>
              <p><i class="bi bi-circle-fill text-success"></i> <strong>Available:</strong>
                <%= user.availability %>
              </p>
            </div>
          </div>
          <% } %>
    </div>

    </div>


    <!-- Social Media -->
    <div class="profile-card">
      <h5 class="section-title">Social Media</h5>
      <div class="social-icons">
        <a href="#"><i class="bi bi-youtube"></i></a>
        <a href="#"><i class="bi bi-instagram"></i></a>
        <a href="#"><i class="bi bi-tiktok"></i></a>
      </div>
    </div>

    <!-- Collection -->
    <div class="profile-card">
      <h5 class="section-title">My Collection</h5>
      <% if(posts.length> 0){ %>
        <div class="row g-3">
          <% posts.forEach(p=>{ %>
            <div class="col-md-6">
              <div class="card post-card p-3 shadow-sm">
                <h5>
                  <a href="/posts/<%= p._id %>" class="text-decoration-none text-dark">
                    <%= p.title %>
                  </a>
                </h5>
                <div class="d-flex justify-content-between align-items-center mt-2">
                  <div>
                    <a href="/posts/<%= p._id %>/edit" class="btn btn-outline-secondary btn-sm">‚úèÔ∏è Edit</a>
                    <form method="POST" action="/posts/<%= p._id %>/delete" class="d-inline">
                      <button class="btn btn-outline-danger btn-sm">üóë Delete</button>
                    </form>
                  </div>
                  <small class="text-muted">Updated: <%= p.updatedAt.toDateString() %></small>
                </div>
              </div>
            </div>
            <% }) %>
        </div>
        <% } else{ %>
          <p>You have no posts</p>
          <% } %>
    </div>
  </main>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</body>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    <% if (flash.error) { %>
    Swal.fire({
      icon: 'error',
      title: 'Oops...',
      text: '<%= flash.error %>',
      confirmButtonColor: '#c0c0c0'
    });
  <% } %>
  <% if (flash.success) { %>
    Swal.fire({
      icon: 'success',
      title: 'Success!',
      text: '<%= flash.success %>',
      confirmButtonColor: '#c0c0c0'
    });
  <% } %>
</script>
</html>