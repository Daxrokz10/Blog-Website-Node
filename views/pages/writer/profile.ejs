<!doctype html>
<html lang="en">

<head>
  <title><%= user.username %>‚Äôs Profile</title>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

  <!-- Bootstrap CSS v5.3.2 -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/dist/css/profile.css">
</head>

<body>
  <main class="container py-4">

    <!-- Profile -->
    <div class="profile-card d-flex align-items-center">
      <img src="https://i.pravatar.cc/150?u=<%= user.username %>" alt="profile" class="profile-img me-4">
      <div>
        <h3 class="mb-1"><%= user.username %></h3>
        <span class="premium">Premium User</span>
        <p class="mb-0 small">Member since Nov 22, 2022</p>
      </div>
    </div>

    <!-- Bio & Details -->
    <div class="profile-card">
      <div class="row g-4">
        <div class="col-md-6">
          <p><strong>My Role:</strong> Beatmaker</p>
          <p><strong>My 3 Favorite Artists:</strong> Ninho, Travis Scott, Metro Boomin</p>
          <p><strong>The Software I Use:</strong> Ableton</p>
          <p><strong>My City:</strong> California, USA</p>
        </div>
        <div class="col-md-6">
          <p><strong>Experience:</strong> Intermediate</p>
          <p><strong>Favorite Genre:</strong> Trap</p>
          <p><strong>Preferred Mood:</strong> Melancholic</p>
          <p><strong>Availability:</strong> ‚úÖ Available for Collaboration</p>
        </div>
      </div>
    </div>

    <!-- Social Media -->
    <div class="profile-card">
      <h5 class="section-title">Social Media</h5>
      <div class="social-icons">
        <a href="#"><i class="bi bi-youtube"></i></a>
        <a href="#"><i class="bi bi-instagram"></i></a>
        <a href="#"><i class="bi bi-tiktok"></i></a>
      </div>
    </div>

    <!-- Collection -->
    <div class="profile-card">
      <h5 class="section-title">My Collection</h5>
      <% if(posts.length > 0){ %>
        <div class="row g-3">
          <% posts.forEach(p=>{ %>
           <div class="col-md-6">
              <div class="card post-card p-3 shadow-sm">
                <h5>
                  <a href="/posts/<%= p._id %>" class="text-decoration-none text-dark">
                    <%= p.title %>
                  </a>
                </h5>
                <div class="d-flex justify-content-between align-items-center mt-2">
                  <div>
                    <a href="/posts/<%= p._id %>/edit" class="btn btn-outline-secondary btn-sm">‚úèÔ∏è Edit</a>
                    <form method="POST" action="/posts/<%= p._id %>/delete" class="d-inline">
                      <button class="btn btn-outline-danger btn-sm">üóë Delete</button>
                    </form>
                  </div>
                  <small class="text-muted">Updated: <%= p.updatedAt.toDateString() %></small>
                </div>
              </div>
            </div> 
          <% }) %>
        </div>
      <% } else{ %>
        <p>You have no posts</p>
      <% } %>
    </div>
    <a href="/editBio ">Edit</a>
  </main>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</body>

</html>
